#
# bspwm hotkeys
#

# quit bspwm
super + shift + q
	pkill -x panel; bspc quit

# close window
super + shift + x
	bspc window -c

# balance current desktop
super + b
	bspc desktop -B

# toggle floating/sticky/pseudo_tiled/fullscreen
super + {a,s,d,f}
	bspc window -t {floating,sticky,pseudo_tiled,fullscreen}

# swap window with biggest window on current desktop
super + m
	bspc window -s biggest

# flip bsp tree
super + {comma,period}
	bspc desktop -F {horizontal,vertical}

# rotate bsp tree
super + shift + {comma,period}
	bspc desktop -R {90,270}

# focus/move window left/down/up/right
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# focus next/previous window
super + {_,shift + }Tab
	bspc window -f {next,prev}

# presel left/down/up/right
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# focus/move to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} \^{1-9,10}; ~/.scripts/pop "%\{c\}$(bspc query --desktops --desktop focused)"

# move/resize window
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# required for above
super + !button{1-3}
	bspc pointer -t %i %i

# required for above
super + @button{1-3}
	bspc pointer -u

# toggle monocle
super + space
	bspc desktop -l next

# select previous / next desktop
super + {Left,Right}
	bspc desktop -f {prev,next}

super + {_,shift} + backslash
    ~/.scripts/hide {hide, show}

super + Return
	urxvtc -e tmux -2

super + ctrl + Return
    urxvtc

super + x
	dmenu_run -i -x 4 -y 4 -h 16 -w 1912 -q -p " > " -nb "#262626" -nf "#A8A8A8" -sb "#949494" -sf "#262626"

super + r
	urxvtc -e ranger

super + shift + s
    ~/.scripts/pop "%\{c\}$(~/.scripts/sys)"

XF86AudioMute
	~/.scripts/vol mute

XF86Audio{Lower,Raise}Volume
	~/.scripts/vol {down,up}

super + ctrl + {Down,Up}
	~/.scripts/vol {down,up}

XF86Audio{Prev,Next}
    mpc -q {prev,next}

XF86MonBrightness{Down,Up}
    ~/.scripts/backlight {down,up}

super + {Down,Up}
    ~/.scripts/backlight {down,up}

super + F1
	xautolock -locknow

# reload sxhkd
super + shift + r
	pkill -USR1 -x sxhkd
