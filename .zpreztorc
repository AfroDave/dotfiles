zstyle ':prezto:*:*' color 'yes'

zstyle ':prezto:load' pmodule \
    'environment' \
    'terminal' \
    'editor' \
    'history' \
    'directory' \
    'spectrum' \
    'utility' \
    'completion' \
    'history-substring-search' \
    'syntax-highlighting' \
    'prompt'

zstyle ':prezto:module:editor' key-bindings 'vi'
zstyle ':prezto:module:editor' dot-expansion 'yes'

zstyle ':prezto:module:history-substring-search' color 'yes'
zstyle ':prezto:module:history-substring-search:color' found ''
zstyle ':prezto:module:history-substring-search:color' not-found ''
zstyle ':prezto:module:history-substring-search' globbing-flags ''

zstyle ':prezto:module:prompt' theme 'custom'

zstyle ':prezto:module:syntax-highlighting' highlighters \
    'main' \
    'brackets' \
    'pattern' \
    'cursor' \
    'root'

zstyle ':prezto:module:syntax-highlighting' styles \
    'builtin' 'fg=magenta' \
    'command' 'fg=blue' \
    'function' 'fg=blue' \
    'default' 'none' \
    'unknown-token' 'bg=none,fg=red,bold' \
    'reserved-word' 'bg=none,fg=yellow' \
    'alias' 'fg=blue' \
    'precommand' 'fg=green' \
    'commandseparator' 'none' \
    'hashed-command' 'fg=blue' \
    'path' 'fg=yellow' \
    'path_prefix' 'fg=yellow' \
    'path_approx' 'fg=yellow' \
    'globbing' 'fg=blue' \
    'history-expansion' 'fg=blue' \
    'single-hyphen-option' 'none' \
    'double-hyphen-option' 'none' \
    'back-quoted-argument' 'none' \
    'single-quoted-argument' 'fg=yellow' \
    'double-quoted-argument' 'fg=yellow' \
    'dollar-double-quoted-argument' 'fg=cyan' \
    'back-double-quoted-argument' 'fg=cyan' \
    'assign' 'none'

zstyle ':prezto:module:terminal' auto-title 'yes'

zstyle ':prezto:module:tmux:auto-start' remote 'yes'
