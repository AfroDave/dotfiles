!Xft settings
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.dpi: 96

*loginShell: true

URxvt*locale: true
UXTerm*locale: true

! Font
URxvt*font: xft:Monospace:size=10.8
UXTerm*font: xft:Monospace:size=10.8
UXTerm*faceName: Monospace
UXTerm*faceSize: 10.8

URxvt*boldMode: false
UXTerm*boldMode: false
UXTerm*allowBoldFonts: false
URxvt*boldFont: xft:Monospace:size=10.8
UXTerm*boldFont: Monospace

! URxvt General
URxvt*depth: 32
URxvt*intensityStyles: true
URxvt*scrollBar: false
URxvt*jumpScroll: true
URxvt*skipScroll: true
URxvt*transparent: false
URxvt*letterSpace: 0
URxvt*internalBorder: 6
URxvt*saveLines: 4095
URxvt*perl-ext-common: default,clipboard,matcher
URxvt*cursorBlink: 1
URxvt*termName: rxvt-unicode-256color
URxvt*matcher.button: 1
URxvt*url-launcher: firefox
URxvt*underlineURLs: true
URxvt*url-select.underline: true
URxvt*urgentOnBell : false
URxvt*visualBell : false
URxvt*buffered : false

! UXTerm General
UXTerm*intensityStyles: true
UXTerm*scrollBar: false
UXTerm*jumpScroll: true
UXTerm*skipScroll: true
UXTerm*letterSpace: 0
UXTerm*internalBorder: 6
UXTerm*saveLines: 4095
UXTerm*perl-ext-common: default,clipboard,matcher
UXTerm*cursorBlink: 1
UXTerm*termName: xterm-256color
UXTerm*matcher.button: 1
UXTerm*url-launcher: firefox
UXTerm*underlineURLs: true
UXTerm*url-select.underline: true
UXTerm*urgentOnBell : false
UXTerm*visualBell : false
UXTerm*buffered : false

! Theme
*background:  #303030
*foreground:  #D7D7D7
*cursorColor: #87AFD7
*color0:      #303030
*color8:      #474747
*color1:      #FF5F5F
*color9:      #FF6C5C
*color2:      #AFD787
*color10:     #8FB676
*color3:      #D7D7AF
*color11:     #C8BC45
*color4:      #87D7FF
*color12:     #D0D0FF
*color5:      #C7AFD7
*color13:     #A761C2
*color6:      #65B58D
*color14:     #6E98A4
*color7:      #D7D7D7
*color15:     #C2C2C2

! Man
*colorIT: #AFD787
*colorBD: #FF5F5F
*colorUL: #87D7FF

! Bindings
*keysym.Shift-Control-V: perl:clipboard:paste
*keysym.Shift-Control-C: perl:clipboard:copy
*iso14755: False

*VT100.Translations: #override \
        Shift <Key>Up: scroll-back(1) \n\
        Shift <Key>Down: scroll-forw(1) \n\
        ~Meta Shift Ctrl <Key>V: insert-selection(CLIPBOARD) \n\
        Meta Shift Ctrl <Key>V: insert-selection(CLIPBOARD) \n\
        ~Shift <Btn1Up>: select-end(CLIPBOARD, CUT_BUFFER0) \n\
        Shift <Btn1Up>: select-end(CLIPBOARD, CUT_BUFFER1) \n\
        ~Shift ~Ctrl ~Meta <Btn2Up>:insert-selection(CLIPBOARD, CUT_BUFFER0) \n\
        Shift ~Ctrl ~Meta <Btn2Up>:insert-selection(CLIPBOARD, CUT_BUFFER1)
